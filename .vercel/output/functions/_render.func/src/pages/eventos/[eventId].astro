---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ReservationForm from '../../components/ReservationForm.astro';
import eventsData from '../../data/events.json';

export async function getStaticPaths() {
    return eventsData.map((event) => ({
        params: { eventId: event.id.toString() },
        props: { event }
    }));
}

const { event } = Astro.props;
---

<Layout title={`${event.title} - Kali Club`}>
    <Header />
    
    <main class="event-detail">
        <section class="event-hero" style={`background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(${event.image})`}>
            <div class="container">
                <div class="event-info">
                    <span class="event-genre">{event.genre}</span>
                    <h1 class="event-title">{event.title}</h1>
                    <p class="event-artist">con {event.artist}</p>
                    <div class="event-details">
                        <div class="detail-item">
                            <span class="detail-icon">üìÖ</span>
                            <span>{event.date}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-icon">üïò</span>
                            <span>{event.time}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-icon">üìç</span>
                            <span>{event.venue}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-icon">üí∞</span>
                            <span>Desde ${event.price}</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="event-content">
            <div class="container">
                <div class="content-grid">
                    <div class="event-description">
                        <h2>Sobre el Evento</h2>
                        <p>{event.description}</p>
                        
                        <div class="event-stats">
                            <div class="stat">
                                <span class="stat-number">{event.capacity}</span>
                                <span class="stat-label">Capacidad Total</span>
                            </div>
                            <div class="stat">
                                <span class="stat-number">{event.ticketsLeft}</span>
                                <span class="stat-label">Tickets Disponibles</span>
                            </div>
                            <div class="stat">
                                <span class="stat-number">18+</span>
                                <span class="stat-label">Edad M√≠nima</span>
                            </div>
                        </div>

                        <div class="event-features">
                            <h3>Lo que incluye:</h3>
                            <ul>
                                <li>‚ú® Acceso completo al evento</li>
                                <li>üéµ Show en vivo del artista</li>
                                <li>üç∏ Barra libre premium (VIP)</li>
                                <li>üì∏ √Årea de fotos exclusiva</li>
                                <li>üéÅ Merchandising del evento</li>
                            </ul>
                        </div>
                    </div>

                    <div class="reservation-section">
                        <ReservationForm eventId={event.id} eventTitle={event.title} eventPrice={event.price} />
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    .event-detail {
        padding-top: 80px;
        min-height: 100vh;
        background: #0a0a0a;
    }

    .event-hero {
        height: 70vh;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        position: relative;
    }

    .event-info {
        color: white;
        max-width: 600px;
    }

    .event-genre {
        display: inline-block;
        background: linear-gradient(45deg, #ff0080, #7928ca);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .event-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 900;
        margin-bottom: 1rem;
        line-height: 1.1;
    }

    .event-artist {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 2rem;
    }

    .event-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 1rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .detail-icon {
        font-size: 1.2rem;
    }

    .event-content {
        padding: 4rem 0;
        color: white;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 4rem;
        align-items: start;
    }

    .event-description h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: #ff0080;
    }

    .event-description p {
        font-size: 1.1rem;
        line-height: 1.8;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 2rem;
    }

    .event-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        margin: 3rem 0;
    }

    .stat {
        text-align: center;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .stat-number {
        display: block;
        font-size: 2rem;
        font-weight: 900;
        color: #ff0080;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .event-features {
        margin-top: 3rem;
    }

    .event-features h3 {
        font-size: 1.3rem;
        margin-bottom: 1rem;
        color: #7928ca;
    }

    .event-features ul {
        list-style: none;
        padding: 0;
    }

    .event-features li {
        padding: 0.5rem 0;
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
    }

    @media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .event-details {
            grid-template-columns: 1fr;
        }

        .event-stats {
            grid-template-columns: 1fr;
        }
    }
</style>
