<style>
    .footer {
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        color: white;
        padding: 4rem 0 0;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1.5fr;
        gap: 3rem;
    }

    .footer-brand {
        max-width: 350px;
    }

    .footer-logo {
        margin-bottom: 1.5rem;
    }

    .logo-img {
        height: 60px;
        width: auto;
    }

    .footer-description {
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        color: rgba(255, 255, 255, 0.7);
        transition: all 0.3s ease;
    }

    .social-link:hover {
        background: linear-gradient(45deg, #ff0080, #7928ca);
        color: white;
        transform: translateY(-2px);
    }

    .social-link svg {
        width: 20px;
        height: 20px;
    }

    .footer-section {
        display: flex;
        flex-direction: column;
    }

    .footer-title {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #ff0080;
    }

    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-links li {
        margin-bottom: 0.75rem;
    }

    .footer-link {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
    }

    .footer-link:hover {
        color: #ff0080;
        padding-left: 8px;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .contact-icon {
        width: 18px;
        height: 18px;
        color: #ff0080;
        flex-shrink: 0;
    }

    .footer-bottom {
        margin-top: 3rem;
        padding: 2rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer-bottom .footer-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        grid-template-columns: none;
        gap: 2rem;
    }

    .copyright {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.9rem;
    }

    .footer-bottom-links {
        display: flex;
        gap: 2rem;
    }

    .footer-bottom-link {
        color: rgba(255, 255, 255, 0.5);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .footer-bottom-link:hover {
        color: #ff0080;
    }

    /* Mobile Styles */
    @media (max-width: 768px) {
        .footer-container {
            grid-template-columns: 1fr;
            gap: 2rem;
            text-align: center;
        }

        .footer-brand {
            max-width: none;
        }

        .social-links {
            justify-content: center;
        }

        .footer-bottom .footer-container {
            flex-direction: column;
            text-align: center;
        }

        .footer-bottom-links {
            flex-direction: column;
            gap: 1rem;
        }
    }

    @media (max-width: 480px) {
        .footer {
            padding: 2rem 0 0;
        }

        .footer-container {
            padding: 0 1rem;
        }

        .contact-item {
            flex-direction: column;
            text-align: center;
            gap: 0.5rem;
        }
    }
</style>
