        <section class="reservations-content">
            <div class="container">
                <div class="reservations-grid">
                    <!-- Reservation Form -->
                    <div class="reservation-form-section">
                        <div class="form-header">
                            <h2 class="form-title">Reserva tu Mesa</h2>
